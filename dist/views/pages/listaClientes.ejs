                    <div class="table-responsive-sm">
                        <table class="table table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Nome</th>
                                    <th>CPF</th>
                                    <th>Conta</th>
                                    <th>Agência</th>
                                    <th>Saldo</th>
                                    <th>Tipo Usuário</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% lista_clientes.forEach(function(cliente){ %>
                                    <tr>
                                        <td>
                                            <%= cliente.nomeCompleto %>
                                        </td>
                                        <td>
                                            <%= cliente.cpf %>
                                        </td>
                                        <td>
                                            <%= cliente.conta %>
                                        </td>
                                        <td>
                                            <%= cliente.agencia %>
                                        </td>
                                        <td>
                                            <%= cliente.saldo %>
                                        </td>
                                        <td>
                                            <%= cliente.tipoUsuario %>
                                        </td>
                                        <td>
                                            <%= cliente.status %>
                                        </td>
                                        <td>
                                            <a href="/clientes/editarCliente/<%= cliente.status%>"
                                                class="btn btn-warning">Editar</a>
                                            <a href="/clientes/deletarCliente/<%= cliente.status%>"
                                                class="deletar btn btn-danger">Excluir</a>
                                        </td>
                                    </tr>
